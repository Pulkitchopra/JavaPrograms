    for (int i=1;i<=m;i++) {
			
			
			for(int j=1;j<=i;j++) {
				System.out.print("*");
			}
			
			int spaces = 2*(n-i);
			
			for(int j=1;j<=spaces;j++){
				System.out.print(" ");
			}

			for(int j=1;j<=i;j++) {
				System.out.print("*");
			}
			System.out.println();
			
		}
		for (int i=m;i>=1;i--) {
			
			
			for(int j=1;j<=i;j++) {
				System.out.print("*");
			}
			
			int spaces = 2*(n-i);
			
			for(int j=1;j<=spaces;j++){
				System.out.print(" ");
			}
			
			for(int j=1;j<=i;j++) {
				System.out.print("*");
			}
			System.out.println();
			
		}





