int m=5;
		int n=5;
		
		
		for(int i=1;i<=m;i++) {
			
			
			//first
			for(int j=1;j<=n-i+1;j++) {
				System.out.print(j);
			}
			
			// star
			for(int j=1;j<=2*i-2;j++) {
				System.out.print("*");
			}
			//second
			
			for(int j=n-i+1;j>=1;j--) {
				System.out.print(j);
			}
			
			
			System.out.println();
			
		}
